<?php $_items = $this->getReviewsCollection()->getItems();?>
<div class="box-collateral box-reviews" id="customer-reviews">
	<?php if (count($_items)):?>
		<h2 class="title"><?php echo $this->__('Customer Reviews') ?></h2>
		<?php echo $this->getChildHtml('toolbar') ?>
		<dl>
		<?php foreach ($_items as $_review):?>
			<dd>
				<div class="title-rating">
					<div class="title" style="color:#ff7a01;font-style:italic;font-weight:bold;">
						<!--<a href="<?php //echo $this->getReviewUrl($_review->getId()) ?>"><?php //echo $this->escapeHtml($_review->getTitle()) ?></a>-->
						<?php echo $this->escapeHtml($_review->getTitle()) ?>
					</div>
					<?php $_votes = $_review->getRatingVotes(); ?>
					<?php if (count($_votes)): ?>
						<?php foreach ($_votes as $_vote): ?>
							<div class="rating-box">
								<div class="rating" style="width:<?php echo $_vote->getPercent() ?>%;"></div>
							</div>
						<?php endforeach; ?>
					<?php endif; ?>
					
				</div>
				<div class="review_description">
					<?php echo nl2br($this->escapeHtml($_review->getDetail())) ?>*
				</div>
			</dd>
			<dt>
				<p>
					<small class="date"><?php echo $this->__('On %s', $this->formatDate($_review->getCreatedAt()), 'long') ?></small>
					<strong><?php echo $this->escapeHtml($_review->getNickname()) ?></strong> said...
				</p>
				<div class="review-point"></div>
			</dt>
			
		<?php endforeach; ?>
		</dl>
		<?php echo $this->getChildHtml('toolbar') ?>
	<?php endif;?>
	<?php echo $this->getChildHtml('review_form') ?>
</div>
